{% extends 'base.html.twig' %}

{% block title %}Images{% endblock %}

{% block body %}
    <h2>Images {{ dump(images) }}</h2>

    {% if images is not empty %}
        <div class="js-images-container">
            {% for image in images %}
                <div class="image-container">
                    <h2>Image #{{ image.id }}</h2>
                    <img src="{{ image.path }}/{{ image.filename }}" alt="{{ image.filename }}">
                </div>
            {% endfor %}
        </div>
    {% else %}
        <h3 class="no-images">No images found.</h3>
    {% endif %}

{% endblock %}
